  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/lodash": "^4.14.74",
    "@types/react": "^15.0.26",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.43",
    "@types/react-test-renderer": "15.4.2",
    "copy-webpack-plugin": "4.5.1",
