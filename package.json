    "style-loader": "^0.18.2",
    "ts-loader": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "uglifyjs-webpack-plugin": "1.2.4",
    "url-loader": "^0.5.9",
    "webpack": "4.1.1",
    "webpack-bundle-analyzer": "2.11.1",
